(production) {
	root /var/www/html
  tls admin@connectedacademy.io

  rewrite {
    to {path} {path}/ /index.html
  }
}

# API
api.connectedacademy.io {
  timeouts 10m
  proxy / api:3000 {
    websocket
    health_check /health
    health_check_interval 10s
  }
}

